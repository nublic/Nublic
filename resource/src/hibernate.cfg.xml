<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
        <property name="hibernate.connection.password">ScamUp</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/scamall_resource</property>
        <property name="hibernate.connection.username">scamall_resource</property>
        <property name="hibernate.default_schema">scamall_resource</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <mapping class="com.scamall.resource.App" />
    </session-factory>
</hibernate-configuration>
