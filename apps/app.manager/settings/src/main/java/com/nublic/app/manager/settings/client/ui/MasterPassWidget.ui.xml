<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rightmargin {
			margin-right: 10px;
		}
	</ui:style>
	<ui:with type="com.nublic.app.manager.settings.client.Resources" field="res"/>

	<g:VerticalPanel width="100%" horizontalAlignment="center">
		<g:HorizontalPanel verticalAlignment="middle">
			<g:Image resource="{res.password}" addStyleNames="{style.rightmargin}"/>
			<g:Label>Enter master password to delete user</g:Label>
		</g:HorizontalPanel>
		<g:PasswordTextBox ui:field="passBox"/>
	</g:VerticalPanel>
	
</ui:UiBinder>
