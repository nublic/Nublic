<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:settings="urn:import:com.nublic.app.manager.settings.client">
	<ui:style>
	.tabSide {
	   left: 100px;
	   position: absolute;
	   top: 10px;
	   width: 110px;
	}
	.tabContent {
	   margin-top: 10px;
	   margin-left: 200px;
	   margin-right: 100px;
	}
	.tabHand {
	   cursor: pointer;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="container-fluid">
			<div class="{style.tabSide}">
				<ul class="pills">
					<li>
						<g:InlineHyperlink ui:field="userLink" addStyleNames="{style.tabHand}">User</g:InlineHyperlink>
					</li>
					<li>
						<g:InlineHyperlink ui:field="workFoldersLink" addStyleNames="{style.tabHand}">Work Folders</g:InlineHyperlink>
					</li>
					<li>
						<g:InlineHyperlink ui:field="nublicLink" addStyleNames="{style.tabHand}">Nublic</g:InlineHyperlink>
					</li>
				</ul>
			</div>
			<div class="{style.tabContent}">
				<g:TabLayoutPanel ui:field="tabs" width="100%"
					height="95%" barHeight="0" barUnit="PX">
					<g:tab>
						<g:header size='0'>User</g:header>
						<settings:DeviceSettingsTab />
					</g:tab>
					<g:tab>
						<g:header size='0'>Work Folders</g:header>
						<g:Button width="5cm" height="3cm" />
					</g:tab>
					<g:tab>
						<g:header size='0'>Nublic</g:header>
						<g:Button width="5cm" height="3cm" />
					</g:tab>
				</g:TabLayoutPanel>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 
