<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:com.nublic.util.users">
	<ui:style type='com.nublic.app.manager.settings.client.ui.UsersPage.UserStyle'>
		.gray {
			color: #777;
		}
		.spacing {
			margin-right: 20px;
		}
		.bold {
			font-weight: bold;
		}
	</ui:style>

	<g:HTMLPanel>
		<div style="padding: 10px;">
			<h3>Lista de usuarios</h3>
			<g:Grid ui:field="existingGrid"/>
			<h3 style="margin-top: 20px;">Crear nuevo usuario</h3>
			<n:UserWidget ui:field="createUser"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
