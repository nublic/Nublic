<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.marginleft{
			margin-left: 40px;
		}
		.lineheight {
			line-height: 15px;
		}
	</ui:style>
		
	<g:HorizontalPanel verticalAlignment="middle" addStyleNames="{style.marginleft}">
		<g:cell width="25px" height="30px">
			<g:Image ui:field="icon"/>
		</g:cell>
		<g:DeckPanel ui:field="notiPanel">
			<g:Label ui:field="text" addStyleNames="{style.lineheight}"/>
		</g:DeckPanel>
	</g:HorizontalPanel>
</ui:UiBinder>
