<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HorizontalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" spacing="10">
		<g:Cell width="50%" height="100%">
			<g:VerticalPanel width="100%" height="100%">
			    <g:HTMLPanel><h3 align="center">Synced Folders</h3></g:HTMLPanel>
			    <g:Cell width="100%" height="100%">
			    	<g:ListBox visibleItemCount="10" width="100%" height="100%"/>
			    </g:Cell>
			    <g:Cell width="100%">
			    	<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
			    		<g:Cell width="100%" horizontalAlignment="ALIGN_RIGHT" height="">
			    			<g:Button>Add</g:Button>
			    		</g:Cell>
			    		<g:Cell width="" horizontalAlignment="ALIGN_RIGHT">
			    			<g:Button>Remove</g:Button>
			    		</g:Cell>
			    	</g:HorizontalPanel>
			    </g:Cell>
		    </g:VerticalPanel>
		</g:Cell>
		<g:Cell width="50%" height="100%">
			<g:VerticalPanel width="100%" height="100%">
                <g:HTMLPanel><h3 align="center">Mirrors</h3></g:HTMLPanel>
                <g:Cell width="100%" height="100%">
                	<g:ListBox visibleItemCount="10" width="100%" height="100%"/>
                </g:Cell>
                <g:Cell width="100%">
                	<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
                		<g:Cell width="50%" horizontalAlignment="ALIGN_RIGHT">
                			<g:Button>Remove</g:Button>
                		</g:Cell>
                	</g:HorizontalPanel>
                </g:Cell>
            </g:VerticalPanel>
		</g:Cell>
	</g:HorizontalPanel>
</ui:UiBinder> 