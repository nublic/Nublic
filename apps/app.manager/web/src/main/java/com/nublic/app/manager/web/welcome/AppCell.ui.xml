<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	   .appName {
	       font-size: 120%;
	   }
	</ui:style>
	<g:HorizontalPanel height="32" verticalAlignment="ALIGN_MIDDLE">
		<g:Image width="32" height="32" ui:field="image"/>
		<g:Cell width="100%">
			<g:Label text="App" ui:field="name" styleName="{style.appName}" />
		</g:Cell>
		<g:Cell horizontalAlignment="ALIGN_RIGHT">
			<g:Image height="32" width="32" ui:field="star" url="images/fav-not-selected.png"/>
		</g:Cell>
	</g:HorizontalPanel>
</ui:UiBinder> 