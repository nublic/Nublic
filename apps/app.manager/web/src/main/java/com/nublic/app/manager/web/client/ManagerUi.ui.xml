<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	   .inner {
	       border-style: none;
	   }
	</ui:style>
	<g:LayoutPanel>
       <g:layer top='0' height='50px'>
         <g:HorizontalPanel>
         	<g:Image url="images/logo-thumb.png"/>
         	<g:Cell verticalAlignment="ALIGN_BOTTOM">
         		<g:TabBar ui:field="appBar" height="50"/>
         	</g:Cell>
         </g:HorizontalPanel>
       </g:layer>
       <g:layer top="50px" bottom="0px">
         <g:NamedFrame name="inner" ui:field="innerFrame" styleName="{style.inner}" width="100%" height="100%"/>
       </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 