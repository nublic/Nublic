<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:com.nublic.app.manager.web.client"
	xmlns:f="urn:import:com.nublic.app.manager.web.frame">
	<ui:style type='com.nublic.app.manager.web.client.ManagerUi.Styles'>
	   .inner {
	       border-style: none;
	   }
	</ui:style>
	<g:LayoutPanel ui:field="layout">
	   <g:layer top='0' height='40px'>
         <n:TopBar ui:field="navBar" />
       </g:layer>
       <g:layer top="36px" bottom="0px">
         <f:AppFrame ui:field="innerFrame" styleName="{style.inner}" width="100%" height="100%"/>
       </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 