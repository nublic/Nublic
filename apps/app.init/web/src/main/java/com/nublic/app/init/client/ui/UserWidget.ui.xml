<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.labelmargin {
			margin-top: 7px;
			margin-right: 8px;
		}
		.floatright {
			float: right;
		}
		.wholemargin {
			margin-top: 30px;
		}
	</ui:style>
	<ui:with type="com.nublic.app.init.client.Resources" field="res"/>

	<g:HorizontalPanel addStyleNames="{style.wholemargin}">
		<g:Image resource="{res.person}"/>

		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:cell width="200px" horizontalAlignment="right">
					<g:Label addStyleNames="{style.labelmargin}">User name:</g:Label>
				</g:cell>
				<g:TextBox ui:field="nameBox"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:cell width="200px" horizontalAlignment="right">
					<g:Label addStyleNames="{style.labelmargin}">Password:</g:Label>
				</g:cell>
				<g:PasswordTextBox ui:field="passwordBox"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:cell width="200px" horizontalAlignment="right">
					<g:Label addStyleNames="{style.labelmargin}">Password verification:</g:Label>
				</g:cell>
				<g:PasswordTextBox ui:field="verificationBox"/>
			</g:HorizontalPanel>
			
			<g:Button addStyleNames="{style.floatright}" ui:field="createButton">Create user</g:Button>
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder>
