<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.next {
			float: right;
		}
		.defaultheight {
			min-height: 400px;
		}
		.topmargin {
			margin-top: 15px;
		}
		.message {
			margin-left: 15px;
		}
		.message p {
			font-size: 110%;
			margin-bottom: 0px;
		}
	</ui:style>
	<ui:with type="com.nublic.app.init.client.Resources" field="res"/>
	<ui:with type="com.nublic.app.init.client.i18n.I18NMessages" field="msg"/>
	
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.defaultheight}">
			<div style="width: 100%; display: table;">
				<h1 style="float: left;">Name your Nublic</h1>
			</div>
			<g:HorizontalPanel addStyleNames="{style.topmargin}" verticalAlignment="middle" width="100%">
				<g:cell width="50px">
					<g:Image resource="{res.info}"/>
				</g:cell>
				<g:HTMLPanel addStyleNames="{style.message}">
					<ui:safehtml from="{msg.infoNublicName}"/>
				</g:HTMLPanel>
			</g:HorizontalPanel>
		</g:HTMLPanel>
		<div>
			<g:InlineHyperlink ui:field="previousLink">previous step</g:InlineHyperlink>
			<g:InlineHyperlink addStyleNames="{style.next}" ui:field="nextLink">next step</g:InlineHyperlink>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
