<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:com.nublic.app.init.client.ui">
	<ui:style>
		.labelmargin {
			margin-top: 7px;
			margin-right: 8px;
		}
		.floatright {
			float: right;
		}
		.wholemargin {
			margin-top: 30px;
		}
		.checkmargin {
			margin-left: 10px;
			margin-top: -7px;
		}
	</ui:style>
	<ui:with type="com.nublic.app.init.client.i18n.I18NMessages" field="msg"/>
	<ui:with type="com.nublic.app.init.client.Resources" field="res"/>

	<g:HorizontalPanel addStyleNames="{style.wholemargin}">
		<g:Image resource="{res.person}"/>

		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:cell width="200px" horizontalAlignment="right">
					<g:Label addStyleNames="{style.labelmargin}" text="{msg.userName}"/>
				</g:cell>
				<g:TextBox ui:field="nameBox"/>
				<g:cell verticalAlignment="middle">
					<n:CheckFeedback ui:field="nameFeedback" addStyleNames="{style.checkmargin}" crossInfo="{msg.userNameNotAvailable}"/>
				</g:cell>
			</g:HorizontalPanel>

			<g:HorizontalPanel>
				<g:cell width="200px" horizontalAlignment="right">
					<g:Label addStyleNames="{style.labelmargin}" text="{msg.password}"/>
				</g:cell>
				<g:PasswordTextBox ui:field="passwordBox"/>
				<g:cell verticalAlignment="middle">
					<n:CheckFeedback ui:field="passwordFeedback" addStyleNames="{style.checkmargin}" crossInfo="{msg.shortPassword}"/>
				</g:cell>
			</g:HorizontalPanel>

			<g:HorizontalPanel>
				<g:cell width="200px" horizontalAlignment="right">
					<g:Label addStyleNames="{style.labelmargin}" text="{msg.passwordVerification}"/>
				</g:cell>
				<g:PasswordTextBox ui:field="verificationBox"/>
				<g:cell verticalAlignment="middle">
					<n:CheckFeedback ui:field="verificationFeedback" addStyleNames="{style.checkmargin}" crossInfo="{msg.noCoincidentPassword}"/>
				</g:cell>
			</g:HorizontalPanel>

			<g:HorizontalPanel>
				<g:cell width="420px">
					<g:Button addStyleNames="{style.floatright}" ui:field="createButton" text="{msg.createUser}"/>
				</g:cell>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder>
