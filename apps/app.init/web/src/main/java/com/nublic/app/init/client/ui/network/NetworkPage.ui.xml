<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:com.nublic.app.init.client.ui"
	xmlns:a="urn:import:com.nublic.app.init.client.ui.network">
	<ui:style>
		.defaultheight {
			min-height: 400px;
		}
		.topmargin {
			margin-top: 15px;
		}
		.accordion {
			background-color: #FFF;
			margin-top: 15px;
		}
		.accordion a {
			line-height: 20px;
		}
		.floatright {
			float: right;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.defaultheight}">
			<div style="width: 100%; display: table;">
				<h1 style="float: left;">Network configuration</h1>
			</div>

			<g:Label addStyleNames="{style.topmargin}">There are some network configurations that we have to set in order to make you able to access your device from everywhere.</g:Label>

			<a:AccordionWidget text="Inner Nublic network interface configuration">
				<g:HorizontalPanel width="100%">
					<g:RadioButton name="innerconf" text="DHCP"/>
					<g:RadioButton name="innerconf" text="Manual"/>
				</g:HorizontalPanel>
			</a:AccordionWidget>
			
			<a:AccordionWidget text="Secure outside access to Nublic internet services">
				<g:HTMLPanel>
					Forward HTTP port (80)<br/>
					Forward HTTPS port (443)<br/>
					Forward FTP ports (20-21)
				</g:HTMLPanel>
			</a:AccordionWidget>
			
			<a:AccordionWidget text="Avilability of URL use in and outside home">
				<g:HTMLPanel>
					Check if DNS calls from inside home are available
				</g:HTMLPanel>
			</a:AccordionWidget>

			<div style="width: 100%; height: 45px;">
				<g:Button addStyleNames="{style.floatright} btn btn-primary">Automatic configuration</g:Button>
			</div>

		</g:HTMLPanel>
		<n:FooterPagination ui:field="footer"/>
	</g:HTMLPanel>
</ui:UiBinder>
