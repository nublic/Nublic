<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.alignmiddle {
			vertical-align: middle;
		}
		.aligncenter {
			text-align: center;
		}
		.empty {
			font-size: 40px;
			font-weight: bold;
			line-height: 40px;
			opacity: 0.1;
		}
	</ui:style>
	<ui:with type="com.nublic.app.music.client.i18n.I18NMessages" field="msg"/>

	<g:SimplePanel width="100%" height="300px" addStyleNames="{style.alignmiddle} {style.aligncenter}">
		<g:Label text="{msg.empty}" addStyleNames="{style.empty}"/>
	</g:SimplePanel>
</ui:UiBinder> 