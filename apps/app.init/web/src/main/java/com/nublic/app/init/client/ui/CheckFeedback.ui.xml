<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.marginleft {
			margin-left: 10px;
			margin-bottom: 0px;
		}
	</ui:style>
	<ui:with type="com.nublic.app.init.client.Resources" field="res"/>
	
	<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
		<g:Image ui:field="check" resource="{res.check}"/>
		<g:Image ui:field="cross" resource="{res.cross}"/>
		<g:Image ui:field="loading" resource="{res.loading}"/>
		<g:HTMLPanel ui:field="checkInfo" addStyleNames="alert alert-success {style.marginleft}"/>
		<g:HTMLPanel ui:field="crossInfo" addStyleNames="alert alert-error {style.marginleft}"/>
		<g:HTMLPanel ui:field="loadingInfo" addStyleNames="alert alert-info {style.marginleft}"/>
		<g:HTMLPanel ui:field="noneInfo" addStyleNames="alert alert-info {style.marginleft}"/>
	</g:HorizontalPanel>
</ui:UiBinder> 