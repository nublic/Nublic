<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.defaultheight {
			min-height: 400px;
		}
		.topmargin {
			margin-top: 15px;
		}
		.bigger {
			font-size: 110%;
			line-height: 20px;
		}
		.mainbox {
			background-color: #ffffff;
			border: solid 1px #CCC;
			-webkit-border-radius: 10px;
			-moz-border-radius: 10px;
			border-radius: 10px;
			-webkit-box-shadow: 0 3px 5px rgba(0, 0, 0, .2);
			-moz-box-shadow: 0 3px 5px rgba(0, 0, 0, .2);
			box-shadow: 0 3px 5px rgba(0, 0, 0, .2);
		}
		.linkbox {
			margin-right: 47px;
			width: 280px;
			height: 175px;
			float: left;
			text-align: center;
		}
		.linkbox:hover {
			cursor: pointer;
			cursor: hand;
			background-image: -moz-linear-gradient(top, #ffffff, #c8e2ed) !important;
			background-image: -ms-linear-gradient(top, #ffffff, #c8e2ed) !important;
			background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#c8e2ed)) !important;
			background-image: -webkit-linear-gradient(top, #ffffff, #c8e2ed) !important;
			background-image: -o-linear-gradient(top, #ffffff, #c8e2ed) !important;
			background-image: linear-gradient(top, #ffffff, #c8e2ed) !important;
			filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#c8e2ed', GradientType=0) !important;
		}
		.linkbox:hover h3 {
  			color: #034966;
  			text-decoration: none !important;
		}
	</ui:style>
	<ui:with type="com.nublic.app.init.client.Resources" field="res"/>
	<ui:with type="com.nublic.app.init.client.i18n.I18NMessages" field="msg"/>
	
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.defaultheight}">
			<div style="width: 100%; display: table;">
				<h1 style="float: left;"><ui:text from="{msg.finishedTitle}"/></h1>
			</div>
			<g:VerticalPanel width="100%" horizontalAlignment="center">
				<g:HorizontalPanel addStyleNames="{style.topmargin}" verticalAlignment="middle" width="100%">
					<g:cell width="150px">
						<g:Image resource="{res.checkbig}"/>
					</g:cell>
					<g:Label addStyleNames="{style.bigger}" text="{msg.finishedText}"/>
				</g:HorizontalPanel>
				
				<g:HTMLPanel>
					<h3><ui:text from="{msg.whatsNext}"/></h3>
				</g:HTMLPanel>
				
				<g:HTMLPanel addStyleNames="{style.mainbox} {style.linkbox}">
					<a>
						<div>
							<div style="margin-top: 10px;">
	          					<h3><ui:text from="{msg.howSynchronize}"/></h3>
	        				</div>
							<g:Image resource="{res.person}"/>
						</div>
					</a>
				</g:HTMLPanel>

			</g:VerticalPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
