<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='com.nublic.app.music.client.ui.TagWidget.TagStyle'>
		.innerImage {
			vertical-align: middle;
			margin-right: 5px;
		}
		.nobackground {
			background: transparent;
			border-style: none;
			box-shadow: none;
			padding: 0;
			opacity: 0.1;
		}
		.nobackground:hover {
			opacity: 0.6;
		}
	</ui:style>
	<g:AbsolutePanel width="200px" height="20px">
		<g:at left='0' top='0' right='0' height="20px">
			<g:HTMLPanel width="100%">
				<ul class="nav nav-list">
					<li>
						<g:InlineHyperlink ui:field="anchor"/>
						<!-- <g:Image ui:field="icon" width="16px" height="16px"/> -->
					</li>
				</ul>
			</g:HTMLPanel>
		</g:at>
		<g:at left='173' right='10' top='1'> <!-- left: 200 - 27 -->
			<g:PushButton ui:field="icon" width="16px" height="16px" addStyleNames="{style.nobackground}"/>
<!-- 			<g:Image ui:field="icon" width="16px" height="16px"/> -->
		</g:at>
	</g:AbsolutePanel>
</ui:UiBinder> 