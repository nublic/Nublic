<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	    .title {
            line-height: 36px;
        }
		.leftmargin {
	   		margin-left: 10px;
		}
		.rightmargin {
			margin-right: 10px; 
		}
		.allmargin {
			margin: 10px 10px 10px 10px;
		}
	</ui:style>


	<g:DockLayoutPanel width="300px" height="130px">
	    <g:north size="36">
	      <g:DockLayoutPanel addStyleNames="modal-header">
	        <g:east size="20">
	          <g:Label ui:field="closeLabel" styleName="close">&times;</g:Label>
	        </g:east>
	        <g:center>
	          <g:HTMLPanel>
               <h4><g:Label ui:field="titleLabel" addStyleNames="{style.leftmargin} {style.title}">?</g:Label></h4>
              </g:HTMLPanel>
	        </g:center>
	      </g:DockLayoutPanel>
	    </g:north>
		<g:center>
			<g:LayoutPanel width="100%" height="100%">
				<g:layer left="0px" width="300px" top="0px" bottom="0px">
					<g:TextBox ui:field="textBox" width="280" height="25px" addStyleNames="{style.allmargin}"/>
				</g:layer>
			</g:LayoutPanel>
		</g:center>
		<g:south size="45">
			<g:HorizontalPanel width="100%" height="45px" verticalAlignment="middle" horizontalAlignment="right" addStyleNames="modal-footer">
			  <g:HorizontalPanel height="45px" verticalAlignment="middle">
				<g:Button ui:field="cancelButton" text="Cancel"/>
				<g:Button ui:field="acceptButton" text="OK" addStyleNames="btn-primary {style.leftmargin} {style.rightmargin}"/>
			  </g:HorizontalPanel>
			</g:HorizontalPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 