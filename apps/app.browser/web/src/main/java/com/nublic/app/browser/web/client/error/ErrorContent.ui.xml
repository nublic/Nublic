<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.padding {
			text-align: center;
			margin: 5px;
		}
	</ui:style>
	<g:VerticalPanel ui:field="errorRoot" horizontalAlignment="center">
		<g:Label ui:field="messageLabel" styleName="{style.padding}">
		</g:Label>
		<g:Button ui:field="closeButton" text="Close" styleName="{style.padding}">
		</g:Button>
	</g:VerticalPanel>
</ui:UiBinder> 