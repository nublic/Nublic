<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.inLine {
			display: inline-table;
			margin: 5px;
		}
		.center {
			text-align: center;
		}
	</ui:style>
	<g:VerticalPanel horizontalAlignment="center" width="96px" styleName="{style.inLine}">
		<g:Image ui:field="fileImage"/>
		<g:Label styleName="{style.center}" ui:field="fileName" text="Name unavailable"/>
	</g:VerticalPanel>
	
</ui:UiBinder> 