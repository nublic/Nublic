<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.inLine {
			display: inline-table;
			margin: 5px;
			vertical-align: top;
		}
		.center {
			text-align: center;
		}
	</ui:style>
	<g:VerticalPanel horizontalAlignment="center" width="96px" styleName="{style.inLine}">
		<g:Hyperlink ui:field="fileThumbnail" />						<!-- To place the thumbnail -->
		<g:Image ui:field="altThumbnail"/>
		<!-- TODO: fix the size of bottom and align things to bottom, cut the texts when they don't fit -->
		<g:Hyperlink ui:field="fileName" styleName="{style.center}"/>	<!-- To place the name (which use to be a link) -->
		<g:Label ui:field="altName" styleName="{style.center}"/>		<!-- An alternative name label in case it is not a link -->
	</g:VerticalPanel>
	
</ui:UiBinder>