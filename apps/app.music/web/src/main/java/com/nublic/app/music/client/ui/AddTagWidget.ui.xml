<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.nobackground {
			background: transparent;
			padding: 0;
			border: none;
		}
		.singlebuttonpadding {
			padding: 5px 6px 4px 6px;
		}
		.appended {
	        border-radius: 3px 0 0 3px !important;
	    }
		.showinline {
	        display: inline;
	    }
	</ui:style>
	<ui:with type="com.nublic.app.music.client.Resources" field="res"></ui:with>
	
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="panel1">
			<g:PushButton addStyleNames="{style.nobackground} {style.singlebuttonpadding}" ui:field="add1">
				<g:upFace image="{res.plus}"/>
			</g:PushButton>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panel2" visible="false">
			<div class="input">
				<div class="input-prepend">
<!-- 	            	<g:TextBox ui:field="textBox" addStyleNames="{style.topelements} {style.middle}"/> -->
					<g:TextBox width="110px" ui:field="textBox"/>
					<span class="add-on {style.appended}">
						<g:PushButton addStyleNames="{style.nobackground} {style.showinline}" ui:field="add2">
							<g:upFace image="{res.plus}"/>
						</g:PushButton>
					</span>
				</div>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 