<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.scroll {
	        overflow-x: hidden;
			overflow-y: auto;
		}
		.rightmargin {
			margin-right: 15px;
		}
	</ui:style>

	<g:DockLayoutPanel width="100%" height="100%">
		<g:north size='35'>
		  <g:HTMLPanel>
		    <div class="page-header" style="width: 100%;">
			  <g:HorizontalPanel ui:field="titlePanel" verticalAlignment="middle" addStyleNames="translucidPanel">
				<g:HTMLPanel><h3><g:Label ui:field="titleLabel" addStyleNames="{style.rightmargin}"/></h3></g:HTMLPanel>
			  </g:HorizontalPanel>
			</div>
		  </g:HTMLPanel>
		</g:north>
		<g:center>
			<g:FlowPanel ui:field="mainPanel" addStyleNames="{style.scroll}"/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 