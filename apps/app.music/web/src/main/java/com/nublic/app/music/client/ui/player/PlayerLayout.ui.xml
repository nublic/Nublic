<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.bramosystems.oss.player.core.client.skin"
	xmlns:c="urn:import:com.kiouri.sliderbar.client.solution.simplevertical">
	<ui:style>
		.nobackground {
			background: transparent;
			padding: 5px;
			margin: 10px 2px 10px 2px;
		}
		.marginleft {
			margin-left: 10px;
		}
		.moremarginleft {
			margin-left: 20px;
		}
		.smallround {
			-webkit-border-radius: 17px;
			-moz-border-radius: 17px;
			border-radius: 17px;
		}
		.biground {
			-webkit-border-radius: 21px;
			-moz-border-radius: 21px;
			border-radius: 21px;
		}
		.glow:hover {
			border-color: rgba(82, 168, 236, 0.8);
			-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
			-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
			outline: 0;
			outline: thin dotted 9;
		}
	</ui:style>
	<ui:with type="com.nublic.app.music.client.Resources" field="res"></ui:with>
	
	<g:HorizontalPanel verticalAlignment="middle">
		<!-- Player controls -->
		<g:PushButton ui:field="prevButton" height="24px" width="24px" addStyleNames="{style.nobackground} {style.smallround} {style.glow} {style.marginleft}">
			<g:upFace image="{res.playerPrev}"/>
		</g:PushButton>
		<g:PushButton ui:field="playButton" height="32px" width="32px" addStyleNames="{style.nobackground} {style.biground} {style.glow}">
			<g:upFace image="{res.playerPlay}"/>
		</g:PushButton>
		<g:PushButton ui:field="pauseButton" height="32px" width="32px" addStyleNames="{style.nobackground} {style.biground} {style.glow}">
			<g:upFace image="{res.playerPause}"/>
		</g:PushButton>
		<g:PushButton ui:field="nextButton" height="24px" width="24px" addStyleNames="{style.nobackground} {style.smallround} {style.glow}">
			<g:upFace image="{res.playerNext}"/>
		</g:PushButton>
		
		<!-- Progress bar -->
		<g:VerticalPanel width="300px" horizontalAlignment="right">
			<b:CSSSeekBar ui:field="seekBar" addStyleNames="{style.glow} {style.marginleft}"/>
			<g:HorizontalPanel>
				<g:Label ui:field="currentTime" text="0:00"/>
				<g:Label text="/"/>
				<g:Label ui:field="totalDurationLabel" text="0:00"/>
			</g:HorizontalPanel>
		</g:VerticalPanel>

		<!-- Info panel -->
		<g:HorizontalPanel addStyleNames="{style.moremarginleft}" verticalAlignment="middle">
			<g:VerticalPanel width="70px">
<!-- 				<b:VolumeControl ui:field="volumeControl"/> -->
<!-- 				<g:Label height="1em"/> To maintain alignment -->
				<c:SliderBarSimpleVertical ui:field="volumeControl"/>
			</g:VerticalPanel>
			<g:Image ui:field="albumArt" height="48px" width="48px" addStyleNames="{style.marginleft}"/>
			<g:VerticalPanel width="500px" height="100%" addStyleNames="{style.marginleft}">
				<g:Label ui:field="artistLabel"/>
				<g:Label ui:field="albumLabel"/>
				<g:Label ui:field="songLabel"/>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		
		<!-- Hack to align inside the CustomAudioPlayer -->
		<g:VerticalPanel width="500px"/>
	</g:HorizontalPanel>
</ui:UiBinder>