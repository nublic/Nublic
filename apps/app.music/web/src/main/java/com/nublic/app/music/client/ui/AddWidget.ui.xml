<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.nublic.util.widgets">
	<ui:style>
		.smooth {
			color: #000000;
			line-height: 18px;
			opacity: 0.1;
			text-shadow: 0 1px 0 #FFFFFF;
		}
		.smooth:hover {
 			color: #000000;
			cursor: pointer;
			opacity: 0.6;
			text-decoration: none;
		}
		.left {
			font-size: 13px;
			font-weight: bold;
			font-style: italic;
			text-align: left;
		}
		.right {
			font-size: 20px;
			font-weight: bold;
			text-align: right;
		}
	</ui:style>
	<g:HTMLPanel>
		<ul class="nav nav-list">
			<li>
				<my:AnchorPanel ui:field="addAnchor">
					<g:HorizontalPanel width="100%" addStyleNames="{style.smooth}" verticalAlignment="middle">
						<g:Label ui:field="tooltipLabel" addStyleNames="{style.left}"/>
						<g:Label text="+" addStyleNames="{style.right}"/>
					</g:HorizontalPanel>
				</my:AnchorPanel>
				<g:TextBox ui:field="addTextBox" width="94%"/>
			</li>
		</ul>
	</g:HTMLPanel>
</ui:UiBinder> 