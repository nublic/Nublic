<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.leftmargin {
	   		margin-left: 10px;
		}
		.rightmargin {
			margin-right: 10px; 
		}
		.allmargin {
			margin: 10px 10px 10px 10px;
		}
	</ui:style>


	<g:DockLayoutPanel width="400px" height="180px">
	    <g:north size="36">
	      <g:DockLayoutPanel addStyleNames="modal-header">
	        <g:east size="20">
	          <g:Label ui:field="closeLabel" styleName="close">&times;</g:Label>
	        </g:east>
	        <g:center>
	          <g:HTMLPanel>
               <h5><g:Label ui:field="titleLabel" addStyleNames="{style.leftmargin}">?</g:Label></h5>
              </g:HTMLPanel>
	        </g:center>
	      </g:DockLayoutPanel>
	    </g:north>
		<g:center>
			<g:SimplePanel ui:field="mainPanel">
			</g:SimplePanel>
		</g:center>
		<g:south size="45">
			<g:HorizontalPanel width="100%" height="45px" verticalAlignment="middle" horizontalAlignment="right" addStyleNames="modal-footer">
			  <g:HorizontalPanel height="45px" verticalAlignment="middle">
				<g:Button ui:field="cancelButton" text="Cancel" addStyleNames="{style.rightmargin}"/>
				<g:Button ui:field="deleteButton" text="Delete" addStyleNames="danger {style.rightmargin}"/>
				<g:Button ui:field="acceptButton" text="Accept" addStyleNames="primary {style.rightmargin}"/>
			  </g:HorizontalPanel>
			</g:HorizontalPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 