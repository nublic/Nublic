<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.center {
			text-align: center;
			vertical-align: middle;
		}
		.padding {
			padding-left: 21px;
			padding-right: 21px;
			padding-top: 10px;
			padding-bottom: 10px;
		}
		.marginbottom {
			margin-bottom: 10px;
		}
		.aligntop {
			vertical-align: top;
		}
	</ui:style>
