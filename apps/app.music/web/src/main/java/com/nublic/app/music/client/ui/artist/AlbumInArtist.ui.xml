<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.center {
			text-align: center;
			vertical-align: middle;
		}
		.margin {
			margin-bottom: 5px;
			margin-top: 5px;
		}
		.marginbottom {
			margin-bottom: 10px;
		}
		.aligntop {
			vertical-align: top;
		}
	</ui:style>

	<g:VerticalPanel width="90px" horizontalAlignment="center" addStyleNames="{style.aligntop}">
		<g:HTMLPanel addStyleNames="{style.margin}" width="64px" height="64px">
			<g:Image ui:field="albumImage" width="64px" height="64px"/>
		</g:HTMLPanel>
		<g:Hyperlink ui:field="albumNameLabel" width="85px" addStyleNames="{style.center} {style.marginbottom}" text="Album name"/>
	</g:VerticalPanel>
</ui:UiBinder> 
