<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rightmargin {
			margin-right: 15px;
		}
		.leftmargin {
			margin-left: 15px;
		}
		.topmargin {
			margin-top: 10px;
		}
		.myh3andahalf {
			font-size: 16px;
		}
		.artlimits {
			max-height: 96px;
			max-width: 96px;
		}
	</ui:style>
	
	<g:FlowPanel>
		<!-- Album display -->
<!-- 		<g:HorizontalPanel ui:field="labelAndButtonsPanel" height="48px" verticalAlignment="middle" addStyleNames="translucidPanel"> -->
		<g:HorizontalPanel verticalAlignment="top">
			<g:HorizontalPanel width="96px" height="96px" horizontalAlignment="center" verticalAlignment="middle">
				<g:Image ui:field="albumImage" addStyleNames="{style.artlimits}"/>
			</g:HorizontalPanel>
			<g:VerticalPanel addStyleNames="{style.leftmargin}">
				<g:HorizontalPanel ui:field="labelAndButtonsPanel" addStyleNames="translucidPanel {style.topmargin}">
					<g:Hyperlink ui:field="albumNameLabel" text="Album name" addStyleNames="{style.rightmargin} {style.myh3andahalf}"/>
				</g:HorizontalPanel>
				<!-- Songs display -->
				<g:FlowPanel ui:field="songsPanel" addStyleNames="{style.topmargin}"/>
			</g:VerticalPanel>
		</g:HorizontalPanel>

	</g:FlowPanel>
</ui:UiBinder> 