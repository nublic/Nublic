<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rightmargin {
			margin-right: 15px;
		}
	</ui:style>
	
	<g:FlowPanel>
		<!-- Album display -->
		<g:AbsolutePanel height="80px" width="100%" addStyleNames="translucidPanel">
			<g:at left='0' top='0'>
				<g:Image ui:field="albumImage"/>
			</g:at>
			<g:at left='90' top='0' bottom='0'>
				<g:HorizontalPanel ui:field="labelAndButtonsPanel" verticalAlignment="middle" height="100%">
					<g:Hyperlink ui:field="albumNameLabel" text="Album name" addStyleNames="{style.rightmargin}"/>
				</g:HorizontalPanel>
			</g:at>
		</g:AbsolutePanel>

		<!-- Songs display -->
		<g:FlowPanel ui:field="songsPanel"/>
	</g:FlowPanel>
</ui:UiBinder> 