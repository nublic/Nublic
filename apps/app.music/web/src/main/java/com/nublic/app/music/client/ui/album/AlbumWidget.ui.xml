<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rightmargin {
			margin-right: 15px;
		}
		.leftmargin {
			margin-left: 15px;
		}
		.topmargin {
			margin-top: 15px;
		}
	</ui:style>
	
	<g:FlowPanel>
		<!-- Album display -->
		<g:HorizontalPanel ui:field="labelAndButtonsPanel" height="48px" verticalAlignment="middle" addStyleNames="translucidPanel">
			<g:Image ui:field="albumImage"/>
			<g:HTMLPanel addStyleNames="{style.leftmargin}">
				<h3><g:Hyperlink ui:field="albumNameLabel" text="Album name" addStyleNames="{style.rightmargin}"/></h3>
			</g:HTMLPanel>
		</g:HorizontalPanel>

		<!-- Songs display -->
		<g:FlowPanel ui:field="songsPanel" addStyleNames="{style.topmargin}"/>
	</g:FlowPanel>
</ui:UiBinder> 