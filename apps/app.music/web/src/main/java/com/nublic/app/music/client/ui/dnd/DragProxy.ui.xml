<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			/* border: 1px solid white !important; */
			-webkit-border-radius: 4px;
			-moz-border-radius: 4px;
			border-radius: 4px;
			background-color: #0088CC;
    		color: #FFFFFF;
    		border-color: rgba(82, 168, 236, 0.8);
			-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
			-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
			outline: 0;
			outline: thin dotted 9;
			padding: 1px 20px 1px 20px;
		}
		.pluspanel {
			color: #FFFFFF;
			font-size: 20px;
			line-height: 14px;
			height: 18px;
			width: 18px;
			font-weight: bold;
			text-shadow: 0 1px 0 #BBBBBB;
			background-color: #20AA10;
			-webkit-border-radius: 9px;
			-moz-border-radius: 9px;
			border-radius: 9px;
		}
		.plus {
			margin-left: 3px;
		}
	</ui:style>

	<g:AbsolutePanel width="700px" height="40px">
		<g:at left='6' top='6'>
			<g:SimplePanel addStyleNames="{style.panel}">
				<g:Label ui:field="text"/>
			</g:SimplePanel>
		</g:at>
		<g:at left='0' top='0'>
			<g:SimplePanel ui:field="plusPanel" addStyleNames="{style.pluspanel}">
				<g:Label addStyleNames="{style.plus}" text="+"/>
			</g:SimplePanel>
		</g:at>
	</g:AbsolutePanel>
</ui:UiBinder> 