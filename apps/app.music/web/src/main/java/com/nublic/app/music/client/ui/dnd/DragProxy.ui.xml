<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			-webkit-border-radius: 4px;
			-moz-border-radius: 4px;
			border-radius: 4px;
			background-color: #0088CC;
    		color: #FFFFFF;
    		border-color: rgba(82, 168, 236, 0.8);
			-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
			-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
			outline: 0;
			outline: thin dotted 9;
			padding: 1px 20px 1px 20px;
		}
		.pluspanel {
			border: 1px solid #A5A5A5 !important;
			color: #FFFFFF;
			text-shadow: 1px #AAAAAA;
			font-weight: bold;
			font-size: 20px;
			height: 18px;
			width: 18px;
			-webkit-border-radius: 9px;
			-moz-border-radius: 9px;
			border-radius: 9px;
			vertical-align: middle;
		}
		.plus {
			/* margin-top: -3px;  TODO: fix plus top margin on chrome */
			margin-left: 3px;
			line-height: 16px;
		}
	</ui:style>
	<ui:with type="com.nublic.app.music.client.Resources" field="res"></ui:with>

	<g:AbsolutePanel width="700px" height="40px">
		<g:at left='8' top='8'>
			<g:SimplePanel addStyleNames="{style.panel}">
				<g:Label ui:field="text"/>
			</g:SimplePanel>
		</g:at>
		<g:at left='1' top='1'>
			<g:SimplePanel ui:field="plusPanel" addStyleNames="{style.pluspanel} plusbackground">
				<g:Label addStyleNames="{style.plus}" text="+"/>
			</g:SimplePanel>
		</g:at>
		<g:at left='1' top='1'>
			<g:SimplePanel ui:field="upPanel">
				<g:Image resource='{res.upArrow}'/>
			</g:SimplePanel>
		</g:at>
		<g:at left='1' top='1'>
			<g:SimplePanel ui:field="downPanel">
				<g:Image resource='{res.downArrow}'/>
			</g:SimplePanel>
		</g:at>
	</g:AbsolutePanel>
</ui:UiBinder> 