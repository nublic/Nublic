<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.nublic.app.music.client.ui">
	<ui:style type='com.nublic.app.music.client.ui.NavigationPanel.NavStyle'>
		.innerImage {
			vertical-align: middle;
			margin-right: 5px;
		}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
	  <div class="well" style="padding: 8px 0; height: 100%; width: 100%;">
		<ul id="Library" class="nav nav-list">
  			<li class="nav-header">Library</li>
		</ul>
		<g:HTMLPanel ui:field="libraryPanel"/>
		<ul id="Collection" class="nav nav-list"> <!-- Id defined as Constants.PARAM_COLLECTION -->
			<li class="nav-header">Collections</li>
		</ul>
		<g:HTMLPanel ui:field="collectionPanel"/>
		<my:AddWidget ui:field="addCollection" defaultText="New Collection"/>
		<ul id="Playlist" class="nav nav-list"> <!-- Id defined as Constants.PARAM_PLAYLIST -->
			<li class="nav-header">Playlists</li>
		</ul>
		<g:HTMLPanel ui:field="playlistPanel"/>
		<my:AddWidget ui:field="addPlaylist" defaultText="New Playlist"/>
	  </div>
	</g:HTMLPanel>
</ui:UiBinder> 