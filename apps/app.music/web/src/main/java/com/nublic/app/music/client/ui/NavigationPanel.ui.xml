			<li class="nav-header">Collections</li>
		</ul>
		<g:HTMLPanel ui:field="collectionPanel"/>								<!-- Collections panel -->
		<my:AddWidget ui:field="addCollection" defaultText="New Collection"/>	<!-- Collections adder -->
