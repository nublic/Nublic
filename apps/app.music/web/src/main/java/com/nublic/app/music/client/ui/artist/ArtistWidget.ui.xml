<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='com.nublic.app.music.client.ui.artist.ArtistWidget.ArtistStyle'>
		.inlineblock {
			display: inline-block;
		}
		.padding {
			padding: 10px;
		}
	</ui:style>
	<g:FlowPanel>
		<g:AbsolutePanel height="80px" width="100%">
			<g:at left='0' top='0'>
				<g:Image ui:field="artistImage"/>
			</g:at>
			<g:at left='90' top='40'>
				<g:Label ui:field="artistNameLabel" text="Artist name"/>
			</g:at>
		</g:AbsolutePanel>
		<g:FlowPanel ui:field="albumsPanel" width="100%" addStyleNames="{style.padding}">
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 