<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='com.nublic.app.music.client.ui.artist.ArtistWidget.ArtistStyle'>
		.inlineblock {
			display: inline-block;
		}
		.padding {
			padding: 0px 0px 0px 44px;
		}
		.rightmargin {
			margin-right: 15px;
		}
		.leftmargin {
			margin-left: 15px;
		}
		.minheight {
			min-height: 173px;
		}
	</ui:style>
	
	<ui:with type="com.nublic.app.music.client.Resources" field="res"></ui:with>
	
	<g:FlowPanel addStyleNames="{style.minheight}">
		<!-- Artist display -->
		<g:HorizontalPanel ui:field="labelAndButtonsPanel" height="48px" verticalAlignment="middle" addStyleNames="translucidPanel">
			<g:Image ui:field="artistImage"/>
			<g:HTMLPanel addStyleNames="{style.leftmargin}">
				<h3><g:Hyperlink ui:field="artistNameLabel" text="Artist name" addStyleNames="{style.rightmargin}"/></h3>
			</g:HTMLPanel>
		</g:HorizontalPanel>
		<!-- Albums display -->
		<g:FlowPanel ui:field="albumsPanel" width="100%" addStyleNames="{style.padding}">
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 