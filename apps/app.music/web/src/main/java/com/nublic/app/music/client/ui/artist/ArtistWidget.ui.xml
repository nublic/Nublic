<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='com.nublic.app.music.client.ui.artist.ArtistWidget.ArtistStyle'>
		.inlineblock {
			display: inline-block;
		}
		.padding {
			padding: 0px 0px 0px 100px;
		}
		.nobackground {
			background: transparent;
			padding: 0px;
			border: none;
		}
		.leftmargin {
			margin-left: 10px;
		}
		.rightmargin {
			margin-right: 15px;
		}
  		/* .opaque :HOVER {
  			opacity: 1 !important;
  		} */
		.semitransparent {
			opacity: 0.4;
		}
		.transparent {
			opacity: 0.1;
		}
		.alignmiddle {
			vertical-align: middle;
		}
	</ui:style>
	
	<ui:with type="com.nublic.app.music.client.Resources" field="res"></ui:with>
	
	<g:FlowPanel>
		<!-- Artist display -->
		<g:AbsolutePanel height="80px" width="100%" ui:field="artistPanel">
			<g:at left='0' top='0'>
				<g:Image ui:field="artistImage"/>
			</g:at>
			<g:at left='90' top='40'>
				<g:HorizontalPanel>
					<g:SimplePanel addStyleNames="{style.alignmiddle} {style.rightmargin}">
						<g:Label ui:field="artistNameLabel" text="Artist name"/>
					</g:SimplePanel>
					<g:PushButton ui:field="editButton" addStyleNames="{style.nobackground} {style.semitransparent} {style.transparent} {style.leftmargin}">
						<g:upFace image="{res.edit}"/>
					</g:PushButton>
					<g:PushButton ui:field="addAtEndButton" addStyleNames="{style.nobackground} {style.semitransparent} {style.transparent} {style.leftmargin}">
						<g:upFace image="{res.addAtEnd}"/>
					</g:PushButton>
					<g:PushButton ui:field="playButton" addStyleNames="{style.nobackground} {style.semitransparent} {style.transparent} {style.leftmargin}">
						<g:upFace image="{res.playMini}"/>
					</g:PushButton>
				</g:HorizontalPanel>
			</g:at>
		</g:AbsolutePanel>
		<!-- Albums display -->
		<g:FlowPanel ui:field="albumsPanel" width="100%" addStyleNames="{style.padding}">
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 