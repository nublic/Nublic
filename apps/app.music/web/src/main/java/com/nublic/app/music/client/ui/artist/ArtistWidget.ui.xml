<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='com.nublic.app.music.client.ui.artist.ArtistWidget.ArtistStyle'>
		.inlineblock {
			display: inline-block;
		}
		.padding {
			padding: 0px 0px 0px 54px;
		}
		.rightmargin {
			margin-right: 15px;
		}
		.minheight {
			min-height: 173px;
		}
	</ui:style>
	
	<ui:with type="com.nublic.app.music.client.Resources" field="res"></ui:with>
	
	<g:FlowPanel addStyleNames="{style.minheight}">
		<!-- Artist display -->
		<g:AbsolutePanel height="68px" width="100%" addStyleNames="translucidPanel">
			<g:at left='10' top='10'>
				<g:HTMLPanel>
					<g:Image ui:field="artistImage"/>
				</g:HTMLPanel>
			</g:at>
			<g:at left='75' top='0' bottom='0'>
				<g:HorizontalPanel ui:field="labelAndButtonsPanel" verticalAlignment="middle" height="100%">
					<g:Hyperlink ui:field="artistNameLabel" text="Artist name" addStyleNames="{style.rightmargin}"/>
				</g:HorizontalPanel>
			</g:at>
		</g:AbsolutePanel>
		<!-- Albums display -->
		<g:FlowPanel ui:field="albumsPanel" width="100%" addStyleNames="{style.padding}">
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 