<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='com.nublic.app.music.client.ui.PlaylistWidget.PlaylistStyle'>
		.selected {
			color: #0064CD;
			font-weight: bold;
		}
		.playing {
			font-weight: bold;
		}
		.clickable {
			cursor: pointer;
			cursor: hand;
		}
	</ui:style>
	
	<ui:with type="com.nublic.app.music.client.Resources" field="res"/>
	
	<g:AbsolutePanel width="170px" height="18px">
		<g:at left='0' top='1'>
			<g:Image ui:field="playImage"/>
		</g:at>
		<g:at left='0' top='1'>
			<g:Image ui:field="pauseImage"/>
		</g:at>
		<g:at left='20' top='0'>
			<g:Label ui:field="nameLabel" addStyleNames="{style.clickable}"/>
		</g:at>
	</g:AbsolutePanel>
</ui:UiBinder> 