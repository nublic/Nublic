<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='com.nublic.app.music.client.ui.ButtonLine.ButtonLineStyle'>
		.nobackground {
			background: transparent;
			padding: 0px;
			border: none;
		}
		.leftmargin {
			margin-left: 8px;
		}
		/* TODO opaque over */
		.semitransparent {
			opacity: 0.4;
		}
		.transparent {
			opacity: 0.1;
		}
	</ui:style>
	<ui:with type="com.nublic.app.music.client.Resources" field="res"></ui:with>
	
	<g:HorizontalPanel>
		<g:PushButton ui:field="deleteButton" addStyleNames="{style.nobackground} {style.semitransparent} {style.transparent} {style.leftmargin}">
			<g:upFace image="{res.delete}"/>
		</g:PushButton>
		<g:PushButton ui:field="editButton" addStyleNames="{style.nobackground} {style.semitransparent} {style.transparent} {style.leftmargin}">
			<g:upFace image="{res.edit}"/>
		</g:PushButton>
		<g:PushButton ui:field="addAtEndButton" addStyleNames="{style.nobackground} {style.semitransparent} {style.transparent} {style.leftmargin}">
			<g:upFace image="{res.addAtEnd}"/>
		</g:PushButton>
		<g:PushButton ui:field="playButton" addStyleNames="{style.nobackground} {style.semitransparent} {style.transparent} {style.leftmargin}">
			<g:upFace image="{res.playMini}"/>
		</g:PushButton>
	</g:HorizontalPanel>
</ui:UiBinder> 