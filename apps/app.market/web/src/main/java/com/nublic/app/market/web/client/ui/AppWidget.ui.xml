<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.nublic.util.widgets">
	<ui:style>
		.image {
			max-width: 96px;
			max-height: 96px;
		}
	</ui:style>
	
	<g:HorizontalPanel>
		<g:cell width="106" horizontalAlignment="center" verticalAlignment="middle">
			<my:AnchorPanel ui:field="imageAnchor">
				<g:Image ui:field="image" addStyleNames="{style.image}"/>
			</my:AnchorPanel>
		</g:cell>
		<g:VerticalPanel>
			<g:Label ui:field="name"/>
			<g:Label ui:field="developer"/>
			<g:Label ui:field="description"/>
		</g:VerticalPanel>
		<g:Button ui:field="installButton"/>
	</g:HorizontalPanel>
</ui:UiBinder> 