<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:com.nublic.app.market.web.client.ui"
	xmlns:s="urn:import:com.nublic.app.market.web.client.ui.slider">
	<ui:style type="com.nublic.app.market.web.client.ui.OpenApp.OpenStyle">
		.topbackground {
			background-color: #CCCCCC;
		}
		.lowerscroll {
			overflow-y: auto;
		}
		.image {
			max-width: 96px;
			max-height: 96px;
		}
		.space {
			margin-right: 4px;
		}
		.textMargins {
			margin-left: 10px;
			margin-top: 5px;
			margin-right: 5px;
		}
		.description {
			margin-top: 3px;
			opacity: 0.75;
		}
		.buttonWidth {
			width: 240px;
		}
		.longTextMargin {
			margin-top: 10px;
		}
		.text10 {
			font-size: 110%;
		}
		.text20 {
			font-size: 120%;
		}
	</ui:style>
	<ui:with type="com.nublic.app.market.web.client.i18n.I18NMessages" field="msg"/>
	
	<!-- Top panel with resumed information -->
	<g:DockLayoutPanel height="100%" width="100%">
		<g:north size="109">
			<g:SimplePanel addStyleNames="{style.topbackground}"> <!-- Just to include the background -->
				<g:VerticalPanel addStyleNames="container">
					<g:Hyperlink ui:field="backLink" text="{msg.goBack}"/>
					<g:HorizontalPanel height="96px" width="100%">
						<g:cell width="106px" horizontalAlignment="center" verticalAlignment="middle">
							<g:Image ui:field="image" addStyleNames="{style.image}"/>
						</g:cell>
						<g:cell horizontalAlignment="left" verticalAlignment="top">
							<g:VerticalPanel addStyleNames="{style.textMargins}">
								<g:HTMLPanel><h2><g:Label ui:field="name"/></h2></g:HTMLPanel>
								<g:HorizontalPanel addStyleNames="{style.text10}">
									<g:Label text="{msg.developer}" addStyleNames="{style.space}"/>
									<g:Anchor ui:field="developer"/>
								</g:HorizontalPanel>
								<g:Label ui:field="shortDescription" addStyleNames="{style.description}"/>
							</g:VerticalPanel>
						</g:cell>
						<g:cell width="250px" verticalAlignment="middle">
							<n:InstallButton ui:field="installButton" addStyleNames="{style.buttonWidth} btn btn-large"/>
						</g:cell>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:SimplePanel>
		</g:north>

		<!-- Lower panel with screenshots and long description -->
		<g:center>
			<g:SimplePanel addStyleNames="{style.lowerscroll}">
				<g:VerticalPanel ui:field="bodyPanel" addStyleNames="container {style.text20}">
					<s:ImageSlider ui:field="imageSlider" addStyleNames="{style.longTextMargin}"/>
					<g:HTMLPanel ui:field="longDescription" addStyleNames="{style.longTextMargin}"/>
				</g:VerticalPanel>
			</g:SimplePanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 