<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:com.nublic.app.market.web.client.ui">
	<ui:style>
		.topbackground {
			background-color: #CCCCCC;
		}
		.lowerscroll {
			overflow-y: scroll;
		}
		.image {
			max-width: 96px;
			max-height: 96px;
		}
		.space {
			margin-right: 4px;
		}
		.textMargins {
			margin-top: 5px;
			margin-right: 5px;
		}
		.description {
			margin-top: 3px;
			opacity: 0.75;
		}
		.buttonWidth {
			width: 240px;
		}
	</ui:style>
	<ui:with type="com.nublic.app.market.web.client.i18n.I18NMessages" field="msg"/>
	
	<g:VerticalPanel>
		<!-- Top panel with resumed information -->
		<g:cell height="106px">
			<g:HorizontalPanel addStyleNames="{style.topbackground}">
				<g:Hyperlink ui:field="backLink" text="{msg.goBack}"/>
				<g:HorizontalPanel height="106px" width="100%">
					<g:cell width="106px" horizontalAlignment="center" verticalAlignment="middle">
						<g:Image ui:field="image" addStyleNames="{style.image}"/>
					</g:cell>
					<g:cell horizontalAlignment="left" verticalAlignment="top">
						<g:VerticalPanel addStyleNames="{style.textMargins}">
							<g:HTMLPanel><h2><g:Label ui:field="name"/></h2></g:HTMLPanel>
							<g:HorizontalPanel>
								<g:Label text="{msg.developer}" addStyleNames="{style.space}"/>
								<g:Anchor ui:field="developer"/>
							</g:HorizontalPanel>
							<g:Label ui:field="shortDescription" addStyleNames="{style.description}"/>
						</g:VerticalPanel>
					</g:cell>
					<g:cell width="250px" verticalAlignment="bottom">
						<n:InstallButton ui:field="installButton" addStyleNames="{style.buttonWidth}"/>
					</g:cell>
				</g:HorizontalPanel>
			</g:HorizontalPanel>
		</g:cell>

		<!-- Lower panel with screenshots and long description -->
		<g:cell>
			<g:VerticalPanel addStyleNames="{style.lowerscroll}">
				<!-- image previewer -->
				<g:Label ui:field="longDescription"/>
			</g:VerticalPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 