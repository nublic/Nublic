<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:com.nublic.app.market.web.client.ui"
	xmlns:s="urn:import:com.nublic.app.market.web.client.ui.slider">
	<ui:style type="com.nublic.app.market.web.client.ui.OpenApp.OpenStyle">
		.topbackground {
			background-color: #CCCCCC;
		}
		.lowerscroll {
			overflow-y: auto;
		}
		.image {
			max-width: 96px;
			max-height: 96px;
		}
		.space {
			margin-right: 4px;
		}
		.shortDescriptionText {
			text-align: right;
			margin-left: 10px;
			margin-top: 5px;
			margin-right: 5px;
		}
		.description {
			margin-top: 3px;
			opacity: 0.75;
		}
		.buttonWidth {
			width: 240px;
		}
		.longTextMargin {
			margin-top: 10px;
		}
		.text10 {
			font-size: 110%;
		}
		.text20 {
			font-size: 120%;
		}
		
		.leftDiv {
			background-color: #CCCCCC;
		}
		.rightDiv {
			overflow-y: auto;
			position: absolute;
			left: 0px; right: 0px; top: 0px; bottom: 0px;
		}
		.internalLeftDiv {
			float: right;
			margin-top: 15px;
			margin-right: 30px;
		}
		.internalRightDiv {
			float: left;
			margin-left: 10px;
			margin-bottom: 15px;
		}
		.relative {
			position: relative;
		}
		.backLinkMargin {
			margin-bottom: 50px;
		}
	</ui:style>
	<ui:with type="com.nublic.app.market.web.client.i18n.I18NMessages" field="msg"/>
	
	<!-- Top panel with resumed information -->
	<g:HorizontalPanel width="100%" height="100%">
		<g:cell width="40%" height="100%">
			<g:SimplePanel width="100%" height="100%" addStyleNames="{style.leftDiv}">
				<g:VerticalPanel width="366px" horizontalAlignment="right" addStyleNames="{style.internalLeftDiv}">
					<g:cell horizontalAlignment="left">
						<g:Hyperlink ui:field="backLink" text="{msg.goBack}" addStyleNames="{style.backLinkMargin}"/>
					</g:cell>
					<g:HorizontalPanel height="96px" width="100%">
						<g:cell horizontalAlignment="right" verticalAlignment="top">
							<g:VerticalPanel addStyleNames="{style.shortDescriptionText}" horizontalAlignment="right">
								<g:HTMLPanel><h2><g:Label ui:field="name"/></h2></g:HTMLPanel>
								<g:HorizontalPanel addStyleNames="{style.text10}">
									<g:Label text="{msg.developer}" addStyleNames="{style.space}"/>
									<g:Anchor ui:field="developer"/>
								</g:HorizontalPanel>
								<g:Label ui:field="shortDescription" addStyleNames="{style.description}"/>
							</g:VerticalPanel>
						</g:cell>
						<g:cell width="106px" horizontalAlignment="center" verticalAlignment="middle">
							<g:Image ui:field="image" addStyleNames="{style.image}"/>
						</g:cell>
					</g:HorizontalPanel>
					<n:InstallButton ui:field="installButton" addStyleNames="{style.buttonWidth} btn btn-large"/>
				</g:VerticalPanel>
			</g:SimplePanel>
		</g:cell>

		<!-- Lower panel with screenshots and long description -->
		<g:cell width="60%" height="100%">
			<g:HTMLPanel height="100%" width="100%" addStyleNames="{style.relative}">
			  <div class="{style.rightDiv}">
				<g:VerticalPanel ui:field="bodyPanel" width="554px" addStyleNames="{style.text20} {style.internalRightDiv}">
					<s:ImageSlider ui:field="imageSlider" addStyleNames="{style.longTextMargin}"/>
					<g:HTMLPanel ui:field="longDescription" addStyleNames="{style.longTextMargin}"/>
				</g:VerticalPanel>
			  </div>
			</g:HTMLPanel>
		</g:cell>
	</g:HorizontalPanel>


</ui:UiBinder> 