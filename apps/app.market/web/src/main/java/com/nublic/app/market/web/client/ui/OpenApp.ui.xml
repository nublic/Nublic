<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:com.nublic.app.market.web.client.ui"
	xmlns:s="urn:import:com.nublic.app.market.web.client.ui.slider">
	<ui:style type="com.nublic.app.market.web.client.ui.OpenApp.OpenStyle">
		.image {
			max-width: 96px;
			max-height: 96px;
		}
		.imageBox {
			background-color: #f2f6f8;
			-webkit-border-radius: 5px;
  			-moz-border-radius: 5px;
  			border-radius: 5px;
			-webkit-box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.8);
  			-moz-box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.8);
  			box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.8);
  			margin-left: 10px;
  			margin-bottom: 10px;
		}
		.space {
			margin-right: 4px;
		}
		.shortDescriptionText {
			text-align: right;
		}
		.description {
			margin-top: 3px;
			opacity: 0.5;
		}
		.developer {
			opacity: 0.5;
		}
		.buttonWidth {
			width: 240px;
		}
		.longTextMargin {
			margin-top: 10px;
		}
		.text10 {
			font-size: 110%;
		}
		.text20 {
			font-size: 120%;
		}
		.leftDiv {
			background-color: #0b1b21;
			color: #FFF;
			-webkit-box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
  			-moz-box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
  			box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
		}
		.whiteLink {
			opacity: 0.75;
			color: white;
		}
		.whiteLink:hover, .whiteLink:active {
			opacity: 1.0;
			color: white ;
			text-decoration: none;
		}
		.whiteLink a {
            color: white;
            text-decoration: none;
        }
        .whiteLink a:hover {
			text-decoration: none;
		}
		.whiteH {
			color: white;
		}
		.rightDiv {
			overflow-y: auto;
			position: absolute;
			left: 0px; right: 0px; top: 0px; bottom: 0px;
		}
		.internalLeftDiv {
			float: right;
			margin-top: 15px;
			margin-right: 30px;
		}
		.internalRightDiv {
			float: left;
			margin-left: 10px;
			margin-bottom: 15px;
		}
		.relative {
			position: relative;
		}
		.backLinkMargin {
			margin-bottom: 50px;
		}
	</ui:style>
	<ui:with type="com.nublic.app.market.web.client.i18n.I18NMessages" field="msg"/>
	
	<!-- Top panel with resumed information -->
	<g:HorizontalPanel width="100%" height="100%">
		<g:cell width="40%" height="100%">
			<g:SimplePanel width="100%" height="100%" addStyleNames="{style.leftDiv}">
				<g:VerticalPanel width="366px" horizontalAlignment="right" addStyleNames="{style.internalLeftDiv}">
					<g:cell horizontalAlignment="left">
						<g:Hyperlink ui:field="backLink" text="{msg.goBack}" addStyleNames="{style.backLinkMargin} {style.whiteLink}"/>
					</g:cell>
					<g:HorizontalPanel height="106px" width="100%">
						<g:cell horizontalAlignment="right" verticalAlignment="top">
							<g:VerticalPanel addStyleNames="{style.shortDescriptionText}" horizontalAlignment="right">
								<g:HTMLPanel><h2 class="{style.whiteH}"><g:Label ui:field="name"/></h2></g:HTMLPanel>
								<g:HorizontalPanel addStyleNames="{style.text10}">
									<g:Label text="{msg.developer}" addStyleNames="{style.space} {style.developer}"/>
									<g:Anchor ui:field="developer" addStyleNames="{style.whiteLink}"/>
								</g:HorizontalPanel>
								<g:Label ui:field="shortDescription" addStyleNames="{style.description}"/>
							</g:VerticalPanel>
						</g:cell>
						<g:VerticalPanel width="106px" height="106px" horizontalAlignment="center" verticalAlignment="middle" addStyleNames="{style.imageBox}">
							<g:Image ui:field="image" addStyleNames="{style.image}"/>
						</g:VerticalPanel>
					</g:HorizontalPanel>
					<n:InstallButton ui:field="installButton" addStyleNames="{style.buttonWidth} btn btn-large"/>
				</g:VerticalPanel>
			</g:SimplePanel>
		</g:cell>

		<!-- Lower panel with screenshots and long description -->
		<g:cell width="60%" height="100%">
			<g:HTMLPanel height="100%" width="100%" addStyleNames="{style.relative}">
			  <div class="{style.rightDiv}">
				<g:VerticalPanel ui:field="bodyPanel" width="554px" addStyleNames="{style.text20} {style.internalRightDiv}">
					<s:ImageSlider ui:field="imageSlider" addStyleNames="{style.longTextMargin}"/>
					<g:HTMLPanel ui:field="longDescription" addStyleNames="{style.longTextMargin}"/>
				</g:VerticalPanel>
			  </div>
			</g:HTMLPanel>
		</g:cell>
	</g:HorizontalPanel>


</ui:UiBinder> 