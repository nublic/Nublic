<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .title {
            line-height: 36px;
        }
        .leftmargin {
            margin-left: 10px;
        }
        .rightmargin {
            margin-right: 10px; 
        }
        .buttonmargin {
	        margin-right: 10px;
	    }
        .allmargin {
            margin: 10px 10px 10px 10px;
        }
    </ui:style>


    <g:DockLayoutPanel ui:field="dockPanel" width="400px" height="180px">
        <g:north size="36">
          <g:DockLayoutPanel addStyleNames="modal-header">
            <g:east size="20">
              <g:Label ui:field="closeLabel" styleName="close">&times;</g:Label>
            </g:east>
            <g:center>
              <g:HTMLPanel>
               <h4><g:Label ui:field="titleLabel" addStyleNames="{style.leftmargin} {style.title}">?</g:Label></h4>
              </g:HTMLPanel>
            </g:center>
          </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:SimplePanel ui:field="mainPanel"  width="100%" height="100%">
            </g:SimplePanel>
        </g:center>
        <g:south size="45">
            <g:HorizontalPanel width="100%" height="45px" verticalAlignment="middle" horizontalAlignment="right" addStyleNames="modal-footer">
              <g:HorizontalPanel height="45px" verticalAlignment="middle">
                <g:Button ui:field="cancelButton" text="Cancel" addStyleNames="{style.buttonmargin}" />
                <g:Button ui:field="noButton" text="No" addStyleNames="btn-danger {style.buttonmargin}" />
                <g:Button ui:field="customButton" text="Custom" addStyleNames="{style.buttonmargin}" />
                <g:Button ui:field="addButton" text="Add" addStyleNames="btn-primary {style.buttonmargin}" />
                <g:Button ui:field="deleteButton" text="Delete" addStyleNames="btn-danger {style.buttonmargin}" />
                <g:Button ui:field="uploadButton" text="Upload" addStyleNames="btn-primary {style.buttonmargin}" />
                <g:Button ui:field="yesButton" text="Yes" addStyleNames="btn-success {style.buttonmargin}" />
                <g:Button ui:field="okButton" text="OK" addStyleNames="btn-primary {style.buttonmargin}" />
              </g:HorizontalPanel>
            </g:HorizontalPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder> 