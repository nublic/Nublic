<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.imagelimits {
			max-width: 96px;
			max-height: 96px;
			border: 1px solid #AAA;
		}
		.thumbborder {
			margin: 2px;
			display: inline-table;
		}
	</ui:style>
	<ui:with type="com.nublic.app.photos.mobile.client.Resources" field="res"></ui:with>
	
	<g:VerticalPanel addStyleNames="{style.thumbborder}" width="115px" height="115px" verticalAlignment="middle" horizontalAlignment="center">
    	<g:Image ui:field="thumbnail" addStyleNames="{style.imagelimits}"/>
	</g:VerticalPanel>
</ui:UiBinder>