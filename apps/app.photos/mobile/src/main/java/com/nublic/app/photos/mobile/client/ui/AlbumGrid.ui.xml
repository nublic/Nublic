<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets">
	<ui:style>
		.inline {
			display: inline-block;
		}
	</ui:style>
	<g:HTMLPanel>
		<m:HeaderPanel ui:field="header" leftButton="Back">
			<g:Label>Scroll Panel</g:Label>			
		</m:HeaderPanel>
		<m:ScrollPanel>
<!-- 			<m:ListPanel ui:field="list" showArrow="false"> -->
<!-- 			</m:ListPanel> -->
			<g:FlowPanel ui:field="grid" addStyleNames="{style.inline}">
			</g:FlowPanel>
		</m:ScrollPanel>
	</g:HTMLPanel>	
</ui:UiBinder> 